<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ztace.vote.mapper.VoteMapper">

	<!-- 返回结果集映射 所有用户 -->
	<resultMap type="voteInfo" id="voteInfoMap">
		<!-- 所有用户id -->
		<id column="id" property="id" />
		<!-- 用户的openid -->
		<result column="openid" property="openid" />
		<!-- 用户的昵称 -->
		<result column="nickname" property="nickname" />
		<!-- 用户所属国家 -->
		<result column="country" property="country" />
		<!-- 用户头像 -->
		<result column="head_icon" property="headimgurl" />
		<!-- 删除标志 -->
		<result column="deleted" property="deleted" />
		<!--是否关注 -->
		<result column="isfollow" property="isfollow" />
	</resultMap>


	<!-- 表名定义 -->
	<sql id="tableName">vote_detail</sql>


	<!-- 年度执法计划 所有列定义 -->
	<sql id="tbAllColumns">
		tba.id,
		tba.openid,
		tba.nickname,
		tbb.country,
		tba.head_icon,
		tba.deleted,
		tba.isfollow
	</sql>

	<!-- 新增列定义 -->
	<sql id="tbInsertColumns">
		openid,
		nickname,
		country,
		head_icon,
		deleted,
		isfollow
	</sql>

	<!-- 新增 -->
	<insert id="insert" parameterType="voteInfo" useGeneratedKeys="true"
		keyColumn="id" keyProperty="id">
		INSERT INTO
		<include refid="tableName" />
		(
		<include refid="tbInsertColumns" />
		)
		VALUES(
		#{openid},
		#{nickname},
		#{country},
		#{headimgurl},
		0,
		#{isfollow}
		)
	</insert>
	
	
	<!--批量新增数据 -->
	<insert id="insertBatch" parameterType="java.util.List">
		INSERT INTO
		<include refid="tableName" />
		(
		<include refid="tbInsertColumns"></include>
		)
		VALUES
		<foreach item="item" index="index" collection="list"
			separator=",">
			(#{item.openid},
			#{item.nickname},
			#{item.country},
			#{item.headimgurl},
			#{item.deleted},
			#{item.isfollow}
			)
		</foreach>
	</insert>
	
	<!-- 更新状态 -->
	<update id="updateVoteInfoByOpenid" parameterType="voteInfo">
		UPDATE
		<include refid="tableName" />
		SET
		openid=#{openid},
		nickname=#{nickname},
		country=#{country},
		head_icon=#{headimgurl},
		deleted=#{deleted},
		isfollow=#{isfollow}
		WHERE
		openid=#{openid}
	</update>

	<!-- 查询用户的所有投票人信息 -->
	<select id="queryVoteInfoByUserid" parameterType="java.lang.Integer"
		resultMap="voteInfoMap">
		SELECT vd.nickname,vd.head_icon,vd.country,vd.isfollow
		FROM vote_detail vd
		LEFT JOIN vote_count vc
		ON vd.openid=vc.openid
		WHERE vc.userid=#{userid} and vd.deleted=0
	</select>
	
	<!-- 查询投票人的信息根据openid -->
	<select id="queryVoteInfoByOpenid" parameterType="java.lang.String"
		resultMap="voteInfoMap">
		SELECT vd.id,vd.openid,vd.nickname,vd.head_icon,vd.country,vd.isfollow
		FROM vote_detail vd
		WHERE vd.openid=#{openid} and vd.deleted=0
	</select>
</mapper>